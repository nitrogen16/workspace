package onlinerSearch;

import java.util.List;
import org.openqa.selenium.By;
import org.openqa.selenium.WebDriver;
import org.openqa.selenium.WebElement;
import org.openqa.selenium.support.CacheLookup;
import org.openqa.selenium.support.FindBy;

public class OnlinerCatalogPage extends PageObject{
	@FindBy(linkText = "Каталог")
	@CacheLookup
    private WebElement catalogPage;
	
	@FindBy(linkText = "Новости")
	@CacheLookup
    private WebElement newsPage;
	
	@FindBy(linkText = "Форум")
	@CacheLookup
    private WebElement forumPage;
	
	public OnlinerCatalogPage(WebDriver driver) {
		super(driver);
	}
	
    public void getElements() {
        List<WebElement> list = driver.findElements(By.xpath(".//*[@class='catalog-bar']/ul")); 
        
        for(WebElement item : list){
        	System.out.println(item.getText());
        }
    }
    
	public OnlinerForumPage clickOnForumPage() {
		//getElements();
		forumPage.click();
		return new OnlinerForumPage(driver);
	}
	
}

package com.search.app;
import java.util.concurrent.TimeUnit;

import org.openqa.selenium.WebDriver;
import org.openqa.selenium.chrome.ChromeDriver;
import org.testng.Assert;
import org.testng.annotations.AfterTest;
import org.testng.annotations.BeforeTest;
import org.testng.annotations.Test;

public class Solution {
	private static  WebDriver driver;
	
	@BeforeTest(description = "Start Browser")
	public static void initializeBrowser(){
		System.setProperty("webdriver.chrome.driver", "C:\\Users\\Viachaslau_Amelin\\Downloads\\chromedriver_2_27\\chromedriver.exe");
		driver = new ChromeDriver();
		driver.manage().timeouts().implicitlyWait(15, TimeUnit.SECONDS);
		driver.manage().timeouts().pageLoadTimeout(15, TimeUnit.SECONDS);
	}
	
	@Test(description = "First Test", priority = 0)
	public static void catalogElements(){
		CatalogPage catalogPage = new HomePage(driver).openHomePage().openCatalogPage();
		catalogPage.getList();
		
		
	}
	
	@Test(description = "Second Test", priority = 1)
	public static void forumElementsSearch(){
		int res = new HomePage(driver).openHomePage().openCatalogPage().openForumPage().getSearchResults());
		Assert.assertTrue(res > 555, "qwerty");
	}
	
	@AfterTest(description = "Close Browser")
	public static void closeBrowser(){
		driver.close();
	}

}
